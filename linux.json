{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "asp-connect-linux-dev",
      "metadata": {
        "description": "Naam van het bestaande App Service Plan"
      }
    },
    "appName": {
      "type": "string",
      "defaultValue": "connect-dev-appname",
      "metadata": {
        "description": "Naam van de App Service (moet beginnen met connect-dev)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "rg-smart-connect-dev",
      "metadata": {
        "description": "Locatie van de resources"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('appName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|9.0"
        },
        "httpsOnly": true
      }
    }
  ]
}
